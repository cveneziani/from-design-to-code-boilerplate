<div class="container">
  <div class='mt-5'  data-controller='all-checkboxes batch-destroy' data-batch-destroy-path-value="<%= batch_destroy_movies_path %>" >
    <h3>Movies to watch 🍿</h3>

    <div data-batch-destroy-target="list">
      <%= render 'list', movies: @movies %>
    </div>

    <button class="btn btn-sm btn-danger mt-3" data-action="click->batch-destroy#destroyMovies">
      Delete selected movies
    </button>
  </div>
</div>

