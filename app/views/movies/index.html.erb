<div class="container">
  <div class='mt-5'  data-controller='movies' >
    <h3>Movies to watch 🍿</h3>

    <div data-movies-target="list">
      <%= render 'list', movies: @movies %>
    </div>

    <button class="btn btn-sm btn-danger mt-3" data-action="click->movies#deleteSelected" data-movies-target="deleteBtn" data-path="<%= delete_selected_movies_path %>">
      Delete selected movies
    </button>
  </div>
</div>

